<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>2</defaultcontrol>
    <controls>
        <control type="image">
            <left>0</left>
            <top>980</top>
            <width>1920</width>
            <height>130</height>
            <texture>common/bgcolor.png</texture>
           <colordiffuse>7fffffff</colordiffuse>
		   <include>Animation_VisibleChange400</include>
		   <visible>!isEmpty(Slideshow.EXIFComment) + System.GetBool(pictures.usetags)</visible>
        </control>
        <control type="image">
            <left>1450</left>
            <top>980</top>
            <width>500</width>
            <height>2000</height>
            <texture>common/bgcolor.png</texture>
           <colordiffuse>7fffffff</colordiffuse>
		   <include>Animation_VisibleChange400</include>
		   <visible>isEmpty(Slideshow.EXIFComment) + System.GetBool(pictures.usetags)</visible>
        </control>		
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>50</height>
            <texture>common/bgcolor.png</texture>
           <colordiffuse>7fffffff</colordiffuse>
		   <include>Animation_VisibleChange400</include>
		   <visible>!isEmpty(Slideshow.LongEXIFTime) | !isEmpty(Slideshow.CameraModel) + System.GetBool(pictures.usetags)</visible>
        </control>		
        <control type="label">
            <left>80</left>
            <top>10</top>
            <width>1900</width>
            <height>20</height>
