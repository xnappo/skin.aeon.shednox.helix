			</control>
			<control type="textbox">
				<left>280</left>
				<top>980</top>
				<width>800</width>
				<height>80</height>
				<align>left</align>
				<font>font24</font>
				<textcolor>white</textcolor>
				<label>$INFO[ Slideshow.EXIFComment]</label>
				<autoscroll delay="4000" time="1000" repeat="10000">true</autoscroll>
			</control>	
		</control>						
