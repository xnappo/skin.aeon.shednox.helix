            <font>font24</font>
            <textcolor>white</textcolor>
            <label>$INFO[Slideshow.LongEXIFTime]</label>
			<visible>!isEmpty(Slideshow.Filedate) + System.GetBool(pictures.usetags)</visible>
        </control>
        <control type="label">
            <left>-60</left>
            <top>10</top>
            <width>1900</width>
            <height>20</height>
            <align>right</align>
            <font>font24</font>
            <textcolor>white</textcolor>
            <label>$INFO[Slideshow.CameraModel]</label>
			<visible>!isEmpty(Slideshow.CameraModel) + System.GetBool(pictures.usetags)</visible>
        </control>	
		<control type="group">
			<left>1480</left>
			<top>985</top>		
			<control type="label">
				<width>600</width>
				<height>30</height>
				<align>left</align>
				<font>font24</font>
				<textcolor>white</textcolor>
				<label>$LOCALIZE[21800]: $INFO[Slideshow.FileName]</label>
				<autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
				<visible>!isEmpty(Slideshow.FileName) + System.GetBool(pictures.usetags)</visible>
			</control>	
			<control type="label">
				<top>30</top>
				<width>600</width>
				<height>30</height>
				<align>left</align>
				<font>font24</font>
				<textcolor>white</textcolor>
				<label>$LOCALIZE[21826]: $INFO[Slideshow.Aperture]</label>
				<autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
				<visible>!isEmpty(Slideshow.Aperture) + System.GetBool(pictures.usetags)</visible>
			</control>
			<control type="label">
				<top>60</top>
				<width>600</width>
				<height>30</height>
				<align>left</align>
				<font>font24</font>
				<textcolor>white</textcolor>
				<label>$LOCALIZE[21828]: $INFO[Slideshow.FlashUsed]</label>
				<autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
				<visible>!isEmpty(Slideshow.FlashUsed) + System.GetBool(pictures.usetags)</visible>
			</control>						
		</control>	
		<control type="group">
			<visible>!isEmpty(Slideshow.EXIFComment) + System.GetBool(pictures.usetags)</visible>
			<control type="label">
				<left>80</left>
				<top>960</top>
				<width>400</width>
				<height>80</height>
				<align>left</align>
				<font>font24</font>
				<textcolor>white</textcolor>
				<!--label>$LOCALIZE[21824]: $INFO[ Slideshow.EXIFComment]</label-->
